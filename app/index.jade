extends layout

block content
  content
    section.sub-header
      .row
        .small-12.medium-4.columns
          .wrapper
            img(src='/assets/img/community.png')
            h2 Community Built
            p
              | Driven by the community.
              br
              | Period.
        .small-12.medium-4.columns
          .wrapper
            img(src='/assets/img/minimal.png')
            h2 Minimal UI
            p Sweet, a WildStar UI overhaul, without sacrificing usability!
        .small-12.medium-4.columns
          .wrapper
            img(src='/assets/img/design.png')
            h2 Design Focused
            p
              | Do you love good design?
              br
              | So do we.
      .row
        .small-12.medium-12.columns
          form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
            input(type='hidden', name='cmd', value='_s-xclick')
            input(type='hidden', name='hosted_button_id', value='UKF9PG4W2GDAU')
            input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif', border='0', name='submit', alt='PayPal - The safer, easier way to pay online!')
            img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')
          small
            em You don't have to donate, but it's definitely appreciated!
    //- SECTION: PROGRESS TRACKER
    a#progress.anchor
    section.modules
      //- section header
      .row
        .small-12.medium-12.columns.text-center
          h2
            i.icon-meter
            | Progress Tracker
      .row
        //- Module
        .small-12.medium-10.small-center.columns
          ul.no-bullet
            | {{#each repos}}
            li.module(class="{{#if recent_update}}recent-update{{/if}}")
              h3.title
                i.icon-github
                a(href='{{html_url}}')
                    {{name}}
                    small.version {{version}}
                | {{#if recent_update}}
                span.status recent updates
                .tooltip
                  .outer
                    .inner {{tooltip}}
                | {{/if}}
              | {{#if open_issues_count}}
              a.issues(href='{{issues_url}}') {{open_issues_count}} issues
              | {{/if}}
            | {{/each}}

    //- SECTION: downloading
    a#download.anchor
    section.download
      //- section header
      .row
        .small-12.medium-10.columns.small-center.text-center
          h2
            i.icon-terminal
            | How to download

          include:md ../data/download.md

    //- SECTION: connected
    a#connected.anchor
    section.conncted
      //- section header
      .row
        .small-12.medium-10.columns.small-center.text-center
          h2
            i.icon-pulse
            | Get Connected

          include:md ../data/connected.md


    //- SECTION: FAQ
    a#faq.anchor
    section.faq
      //- section header
      .row
        .small-12.medium-10.columns.small-center.text-center
          h2
            i.icon-faqs
            | FAQ

          include:md ../data/faq.md

    //- SECTION: SCREENSHOTS
    a#screenshots.anchor
    section.screenshots
      //- section header
      .row
        .small-12.columns.text-center
          h2
            i.icon-diamond
            | Screenshots
      .row
        | {{#each screenshots}}
        .small-12.medium-6.columns.text-center
          a(data-screenshot data-reveal-id="modal-{{id}}")
            img(src='{{url}}')
        | {{/each}}

    //- SECTION: CONTRIBUTORS
    a#contributors.anchor
    section.contributors
      //- section header
      .row
        .small-12.columns.text-center
          h2
            i.icon-contribute
            | Contributors
      .row
        | {{#each contributors}}
        //- Person
        .small-12.medium-4.columns.text-center
          .panel
            h3 {{name}}
            h4 {{role}}
            ul.no-bullet
              | {{#if website}}
              li.url
                a(href='http://{{website}}')
                  i.icon-link
                  | {{website}}
              | {{/if}}
              | {{#if twitter}}
              li.twitter
                a(href='http://twitter.com/{{twitter}}')
                  i.icon-twitter
                  | @{{twitter}}
              | {{/if}}
              | {{#if github}}
              li.github
                a(href='http://github.com/{{github}}')
                  i.icon-github
                  | {{github}}
              | {{/if}}
        | {{/each}}

